pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "preeti730/simple-hello:latest"   // Docker Hub image
        DOCKER_HUB_CREDS = "dockerhub-creds"             // Jenkins creds for DockerHub
        AWS_CREDS = "aws-eks-creds"                      // AWS creds for EKS
        KUBE_NAMESPACE = "preeti"                        // Namespace for your app
    }

    tools {
        maven 'maven3'
    }

    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'preeti-gitcred', 
                    url: 'https://github.com/preetishinge/Springboot-Docker.git', 
                    branch: 'main'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Docker Build & Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: "$DOCKER_HUB_CREDS", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        docker build -t $DOCKER_IMAGE .
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push $DOCKER_IMAGE
                    '''
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: "$AWS_CREDS"]]) {
                    sh '''
                        echo "üîπ Updating kubeconfig..."
                        aws eks update-kubeconfig --region eu-west-2 --name batch4-Team3-cluster

                        echo "üîπ Creating namespace if not exists..."
                        kubectl create namespace $KUBE_NAMESPACE --dry-run=client -o yaml | kubectl apply -f -

                        echo "üîπ Updating image in deployment manifest..."
                        sed -i "s|preeti730/simple-hello:latest|$DOCKER_IMAGE|g" K8s/springboot-deployment.yaml

                        echo "üîπ Applying Deployment & Service..."
                        kubectl apply -f K8s/springboot-deployment.yaml
                        kubectl apply -f K8s/service.yaml
                    '''
                }
            }
        }

        stage('Apply Ingress') {
            steps {
                sh '''
                  echo "üîπ Applying ingress..."
                  kubectl apply -f K8s/ingress.yaml
                '''
            }
        }

        stage('Post-Deployment Health Check') {
            steps {
                sh '''
                  echo "üîπ Checking rollout status..."
                  kubectl rollout status deployment/springboot-hello -n $KUBE_NAMESPACE --timeout=60s
                  
                  echo "üîπ Listing pods..."
                  kubectl get pods -n $KUBE_NAMESPACE

                  echo "üîπ Listing services..."
                  kubectl get svc -n $KUBE_NAMESPACE

                  echo "üîπ Checking ingress..."
                  kubectl get ingress -n $KUBE_NAMESPACE
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful!"
        }
        failure {
            echo "‚ùå Deployment failed. Collecting logs..."
            sh 'kubectl get events -n $KUBE_NAMESPACE || true'
            sh 'kubectl describe pods -n $KUBE_NAMESPACE || true'
        }
        always {
            echo "üì¶ Pipeline completed (success or fail)."
        }
    }
}
